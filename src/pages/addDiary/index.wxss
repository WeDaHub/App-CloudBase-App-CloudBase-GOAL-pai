.container {
  margin: 15px;
}
.input-plan-container {
  border: 1px solid #f0f0f0;
  height: 50px;
}
.input-plan-container input{
  height: 50px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 13px;
}
.icon-desc {
  font-size: 13px;
  margin: 15px 0;
  color: #888;
}
.content {
  border: 1px solid #f0f0f0;
  min-height: 200px;
}
.content textarea{
  min-height: 200px;
  width: 100%;
  padding: 10px;
  font-size: 13px;
  box-sizing: border-box;
}
.tips {
  font-size: 12px;
  margin: 15px 0;
  color: #888;
}
.submit-container {
  position: fixed;
  bottom: 40px;
  width: 100%;
}
.submit {
  background-color: #fff100;
  height: 50px;
  line-height: 50px;
  color: #333;
  margin: 0 15px;
  text-align: center;
  border-radius: 10px;
}