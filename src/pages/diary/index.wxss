.container {
    margin: 15px;
}
.container .diaryitem {
  width: 100%;
  border-radius: 5px;
  box-shadow: 3px 3px 8px 0px #AAAAAA;
  margin-bottom: 10px;
  background-color: #FFF100;
}
.diaryitem .title{
  text-align: center;
  height: 40px;
  line-height: 40px;
  color: #333333;
}
.diaryitem .content {
  font-size: 12px;
  text-align: left;
  text-indent: 2em;
  margin: 0 15px;
  line-height: 20px;
  max-height: 60px;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 3;    
  overflow: hidden;
  color: #666;
}
.diaryitem .time {
  height: 40px;
  line-height: 40px;
  text-align: right;
  font-size: 12px;
  color: #999;
  margin: 0 20px;
}